{
  "compilerOptions": {
    "outDir": "./dist",       // Output directory for compiled JavaScript files
    "rootDir": "./src",       // Root directory of your TypeScript files
    "target": "ES6",          // Target JavaScript version (e.g., ES6, ES5)
    "module": "commonjs",     // Module system to use (e.g., commonjs, es6)
    "strict": false,           // Enable strict type-checking options
    "esModuleInterop": true   // Enable interoperability between CommonJS and ES Modules
  },
  "include": ["src/**/*"],     // Include all TypeScript files in the src directory
  "exclude": ["node_modules"]  // Exclude node_modules
}
